{% extends 'base.html.twig' %}

{% block title %}Список клиентов{% endblock %}

{% block body %}
    <h1>Список клиентов</h1>

    <a href="{{ path('app_client_new') }}" class="btn btn-primary">Добавить</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.firstName }}</td>
                <td>{{ client.secondName }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">Подробнее</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Список клиентов пуст</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
